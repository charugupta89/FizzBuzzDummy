@model TestMyMvc.Model.GetFizzBuzz

@using PagedList.Core
@using X.PagedList.Mvc.Core
@{
    ViewBag.Title = "FizzBuzz";
}

<div class="jumbotron">
    <h1>FizzBuzz</h1>
</div>

<div class="row">
    <div class="col-md-4 col-md-offset-4">

        @foreach (var number in Model.FizzBuzznum)
        {
            if (number == "FizzBuzz")
            {
                <span class="fizz">Fizz</span><span class="buzz">Buzz</span>
            }
            else
            {
                <span class="@number.ToLower()"> @number</span>
            }
            <br />
        }

    </div>

</div>

